#= require vendor/weui.min

// loop through all post and console out each post's title
function consoleListOfAllPosts() {
  <% site.posts.each do |post| %>
    console.log(" <%= post.title %> ");
  <% end %>
}

function showMainPagePicker(rooturl) {

	weui.picker([
	{
		label: "Back to Dashboard",
		value: 0,
	},
	{
		label: "Blog Home",
		value: 1
	},
	{
    label: "Things I Built",
    value: 2
  },
  ], {
      defaultValue: [2],
      onChange: function (result) {
          
      },
      onConfirm: function (result) {
          var value = result[0].value;
          if (value == 0) {
          	window.location = rooturl;
          }
          else if (value == 1) {
          	window.location = "<% site.baseurl %>/";
          }
          else if (value == 2) {
          	window.location = "<% site.baseurl %>/things-i-built/";
          }
      },
      id: 'hamburgerBtn'
  });
}